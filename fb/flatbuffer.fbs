namespace fb;

table TableIndex {
  offsets:[BlockOffset];
  bloom_filter:[ubyte];
  max_version:uint64;
  key_count:uint32;
  uncompressed_size:uint32;
  on_disk_size:uint32;
}

table BlockOffset {
  key:[ubyte];
  offset:uint;
  len:uint;
}

root_type TableIndex;
root_type BlockOffset;
